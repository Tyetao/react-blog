@import '../../assets/stylus/_variables.styl'

.about
    height: 700px
    padding: 40px 50px
    box-sizing: border-box

    h1
        font-size: 16px
        color: #555
        margin-bottom: 20px

    p
        line-height: 20px
        color: #93999f

    span
        color: #93999f
        display: block
        margin-bottom: 2px

    .contact
        margin: 20px 0
        color: #555
        font-size: 16px

    .info
        margin-top: 20px

.textarea
    box-sizing: border-box
    padding: 10px;
    width: 100%
    height: 80px
    resize: none
    border: 1px solid #555

.btn
    float: right
    margin-top: 10px
    btn(80px)
