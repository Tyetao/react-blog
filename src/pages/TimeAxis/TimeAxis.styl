.archives
    padding: 0 100px
    box-sizing: border-box

    a
        color: #93999f
        display: block

        &:hover
            color: #222

            .post-header::before
                background: #222

            .post-time
                color: #222

            .post
                border-bottom-color: #666

.posts-collapse
    position: relative
    z-index: 1010
    margin-bottom: 60px

.archive-year
    position: relative
    font-weight: 900
    color: #555
    font-size: 20px
    margin: 60px 0
    padding-left: 20px
    animation: rollIn 1s ease-in-out 0.5s

    i
        font-size: 20px
        margin-right: 4px

    &::before
        content: ' '
        position: absolute
        left: 0
        top: 50%
        margin-left: -4px
        margin-top: -4px
        width: 8px
        height: 8px
        background: #555
        border-radius: 50%

.post
    padding: 20px 0
    animation: fadeYApi 1.5s ease-in-out 1s
    border-bottom: 1px dashed #ccc

.post-header
    position: relative
    padding: 10px 0 10px 20px

.post-time
    color: #93999f
    margin-right: 10px

.post-title-link
    cursor: pointer
    font-weight: 900
    color: #93999f

.post-header::before
    content: ' '
    position: absolute
    left: 0
    top: 14px
    width: 6px
    height: 6px
    margin-left: -4px
    background: #93999f
    border-radius: 50%
    border: 1px solid #fff
    transition-duration: 0.2s
    transition-timing-function: ease-in-out
    transition-delay: 0s
    transition-property: background

.post-header:hover::before
    background: #222

.posts-collapse::after
    content: ' '
    position: absolute
    top: 20px
    left: 0
    margin-left: -2px
    width: 4px
    height: 100%
    background: #f5f5f5
    z-index: -1
