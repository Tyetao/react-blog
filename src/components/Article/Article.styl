@import '../../assets/stylus/_variables.styl'
.article
    margin-bottom: 50px

    h1
        font-size: 20px
        text-align: center
        word-break: break-word
        font-weight: 400

        a
            position: relative
            color: #555
            cursor: pointer

            &::before
                content: ''
                position: absolute
                width: 100%
                height: 2px
                bottom: 0
                left: 0
                background-color: #000
                visibility: hidden
                transform: scaleX(0)
                transition-duration: 0.2s // 规定完成过渡效果需要多少秒或毫秒
                transition-timing-function: ease-in-out

            &:hover::before
                visibility: visible
                transform: scaleX(1)

    .post-meta
        color: #555
        text-align: center
        margin: 30px 0

    .desc
        color: #93999f
        text-align: justify
        line-height: 20px

    .btn
        btn(80px, #555, none, 2px solid #555)
        text-align: center
        margin: 30px auto
        transition: all 0.5s

        &:hover
            color: #fff
            background: #555
