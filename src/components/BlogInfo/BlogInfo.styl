.logo
    margin-top: 10px
    background: #fff
    padding: 16px 10px
    box-sizing: border-box

.logo-img
    display: block
    margin: 0 auto
    padding: 2px
    max-width: 110px
    height: 100px
    border: 1px solid #eee

.blog-name
    text-align: center
    color: #555
    font-weight: bold
    margin: 10px 0 20px 0
    font-size: 14px

.site-description
    text-align: center
    color: #93999f
    line-height: 18px

.sub-nav
    display: flex
    margin: 20px 0 0 0
    border-bottom: 1px dotted #ccc
    padding-bottom: 20px

    a
        flex: 1
        border-right: 1px solid #eee
        text-align: center

        &:last-of-type
            border: none

.top
    font-weight: bold
    color: #555
    font-size: 13px

.bom
    color: #93999f
    margin-top: 6px

.friend
    display: flex
    margin-top: 20px

    span
        flex: 1
        text-align: center
        a
            color: #555
            i
                font-size: 14px
                margin-right: 4px
